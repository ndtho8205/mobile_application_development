<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SelectCurrencyButton" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorSelectCurrencyBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableEnd">@drawable/ic_more</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.CurrencyUnitTextView" parent="Base.Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="AppTheme.CurrencySymbolTextView" parent="Base.Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B2FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="AppTheme.CurrencyAmountEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#B2FFFFFF</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:hint">0.0</item>
    </style>

</resources>
